<!-- Featured Products for LivanaStore -->
<div class="featured-collection-livana container" data-section-id="{{ section.id }}">
  <h2 class="featured-collection-livana__title">{{ section.settings.title | escape }}</h2>
  <div class="featured-collection-livana__grid">
    {%- for block in section.blocks -%}
      {%- assign product = block.settings.product -%}
      {%- if product != blank -%}
        <div class="product-card" {{ block.shopify_attributes }}>
          <a href="{{ product.url }}">
            <img src="{{ product.featured_image | image_url: width: 400 }}" alt="{{ product.featured_image.alt | escape }}" loading="lazy">
            <div class="product-card__info">
              <h3>{{ product.title }}</h3>
              <p>{{ product.price | money }}</p>
            </div>
          </a>
        </div>
      {%- else -%}
        <div class="product-card">
          <div class="product-card__placeholder">
            {{ 'product-' | append: forloop.index | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
          <div class="product-card__info">
            <h3>{{ 'onboarding.product_title' | t }}</h3>
            <p>{{ 1999 | money }}</p>
          </div>
        </div>
      {%- endif -%}
    {%- endfor -%}
  </div>
</div>

{% schema %}
{
  "name": "Featured Products - Livana",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Nos Best-Sellers"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Products - Livana",
      "blocks": [
        { "type": "product" },
        { "type": "product" },
        { "type": "product" },
        { "type": "product" }
      ]
    }
  ]
}
{% endschema %} 