<!-- Promotional Banner for LivanaStore -->
<div class="promo-banner" data-section-id="{{ section.id }}">
  <div class="container">
    <a href="{{ section.settings.link }}" class="promo-banner__link">
      <p>{{ section.settings.text | escape }}</p>
    </a>
  </div>
</div>

{% schema %}
{
  "name": "Promotional Banner",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "Free shipping on orders over $50"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    }
  ],
  "presets": [
    {
      "name": "Promotional Banner"
    }
  ]
}
{% endschema %} 